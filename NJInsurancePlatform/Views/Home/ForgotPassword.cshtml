@model NJInsurancePlatform.Models.LoginViewModel

@{
    //ViewData["Title"] = "ForgotLogin";
}

<style>
    .login-box{
        display: flex;
        flex-direction: column;
        border: 1px solid;
        align-items: center;
        box-shadow: 3px 3px 3px rgba(0, 0, 0, .3);
        padding: 0px;
        width: 325px;
        border-radius: 10px;
        margin: px;
    }
    .login-heading-text{
        font-family:sans-serif;
        color: purple;
        font-weight: 700;
        margin-top: 10px;
        margin-bottom: 0px;
    }
    .login-container{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding-top: 2%;
        margin-top: 8%;
        margin-bottom: 0%;
    }
    .login-input-row{
        display:flex;
        flex-direction: row;
        justify-content: center;
        align-items: end;
        height: 80px;
        border-bottom: 1px solid;
        border-color: silver;
        padding: 0px;
        margin: 0px;
    }
    .login-input-box{
        height: 30%;
        margin: 0px;
        padding: 0px;
    }

    .login-submit-button-container{
        text-align: center;
        padding-top: 5px;
        margin: 0px;
        margin-top: 2%;
    }
    .btn-large {
        margin-bottom: 20px;
    }
    h4 {
        margin: 1px;
    }
    form {
        margin: 0px;
        padding: 0px;
    }
</style>


<div class="login-container">
    <div class="login-box">
      <h4 class="login-heading-text">Account Recovery</h4>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="login-input-row">
                <i class="material-icons left" style="color:purple">account_circle</i>
                <label asp-for="UserName" hidden></label>
                <div class="login-input-box">
                <input style="border:none;height:100%; width:50%;text-align:left;padding: 0px 0px 0px 20px" type="text"  placeholder="User Name" asp-for="UserName" />
                @*<br/>*@
                <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="login-submit-button-container">
               <!-- <input  type="submit" value="Submit" class="btn btn-primary" /> -->
                <button type="submit" class="waves-effect waves-light btn-large white" style="border-radius: 40px;width:100%;color:purple; font-weight:600">Recover<i class="material-icons right">keyboard_arrow_right</i></button>
                <br/><br/>
            </div>
        </form>
    </div>
</div>

