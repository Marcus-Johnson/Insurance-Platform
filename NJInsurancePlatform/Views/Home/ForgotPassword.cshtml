@model NJInsurancePlatform.Models.LoginViewModel

@{
    ViewData["Title"] = "Account Recovery";
}
<style>
    nav {
        display: none;
    }
</style>

<button type="submit" class="waves-effect waves-light btn-large white return" style="border-radius: 40px;width:10%%;color:purple; font-weight:600"><a href="/Home/Login">Return</a><i class="material-icons right">keyboard_arrow_right</i></button>

<div class="login-container">
    <div class="login-box">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="login-input-row">
                <i class="material-icons left" style="color:purple">account_circle</i>
                <label asp-for="UserName" hidden></label>
                <div class="login-input-box">
                <input style="border:none;height:100%; width:50%;text-align:left;padding: 0px 0px 0px 20px" type="text"  placeholder="User Name" asp-for="UserName" />
                @*<br/>*@
                <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="login-submit-button-container">
               <!-- <input  type="submit" value="Submit" class="btn btn-primary" /> -->
                <button type="button" class="waves-effect waves-light btn-large white" style="border-radius: 40px;width:100%;color:purple; font-weight:600">Recover<i class="material-icons right">keyboard_arrow_right</i></button>
                <br/><br/>
            </div>
        </form>
    </div>
</div>

