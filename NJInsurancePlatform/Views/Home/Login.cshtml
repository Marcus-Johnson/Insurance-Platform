@model NJInsurancePlatform.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<style>
    .login-box{
        display: flex;
        flex-direction: column;
        border: 1px solid;
        align-items: center;
        box-shadow: 3px 3px 3px rgba(0, 0, 0, .3);
        padding: 0px 70px 10px 70px;
        border-radius: 10px;
    }
    .login-heading-text{
        font-family:sans-serif;
        color: purple;
        font-weight: 700;
    }
    .login-container{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 70vh;
    }
    .login-input-row{
        display:flex;
        flex-direction: row;
        justify-content: center;
        align-items: end;
        height: 80px;
        border-bottom: 1px solid;
        border-color: silver;
        margin-left:0;
    }
    .login-input-box{
        height: 30%;
    }

    .login-submit-button-container{
        text-align: center;
    }
</style>


<div class="login-container">
    <div class="login-box">
      <h4 class="login-heading-text">User Login</h4>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="login-input-row">
                <i class="material-icons left" style="color:purple">account_circle</i>
                <label asp-for="UserName" hidden></label>
                <div class="login-input-box">
                <input style="border:none;height:100%; width:50%;text-align:left;padding: 0px 0px 0px 60px" type="text"  placeholder="User Name" asp-for="UserName" />
                </div>
            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>

            <div class="login-input-row">
                <i class="material-icons left" style="color:purple">enhanced_encryption</i>
                <label asp-for="PasswordHash" hidden></label>
                <div class="login-input-box">
                <input style="border:none;height:100%; width:50%;text-align:left;padding: 0px 0px 0px 60px" type="password" placeholder="Password" asp-for="PasswordHash" />
                </div>
            </div>
            <div class="form-group">
                <input  type="submit" value="Login" class="btn btn-primary" />
@*Added "Forgot Password" btn*@
                <input  type="submit" value="Forgot Password?" class="btn btn-Primary" />
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
            <br/>
            <div class="login-submit-button-container">
               <!-- <input  type="submit" value="Submit" class="btn btn-primary" /> -->
                <a>Forgot Password</a><br/><br/>
                <button type="submit" class="waves-effect waves-light btn-large white" style="border-radius: 40px;width:100%;color:purple; font-weight:600">Submit<i class="material-icons right">keyboard_arrow_right</i></button>
                <br/><br/>
            </div>
        </form>
</div>