@model NJInsurancePlatform.Models.LoginViewModel
@{
    ViewData["Title"] = "User Login";
}

<div class="login-container">
    <div class="login-box">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="login-input-row">
                <i class="material-icons left indigo-text">person_outline</i>
                <label asp-for="UserName" hidden></label>
                <div class="login-input-box">
                <input style="border:none;height:100%; width:100%;text-align:center;" type="text"  placeholder="User Name" asp-for="UserName" />
                <br/>
                <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>

            <div class="login-input-row">
                <i class="material-icons left indigo-text">lock_outline</i>
                <label asp-for="PasswordHash" hidden></label>
                <div class="login-input-box">
                <input style="border:none;height:100%; width:100%;text-align:center;" type="password" placeholder="Password" asp-for="PasswordHash" />
                <br/>
                <span asp-validation-for="PasswordHash" class="text-danger"></span>    
            </div>
            </div>
            <br/>
            <div class="login-submit-button-container">
               <!-- <input  type="submit" value="Submit" class="btn btn-primary" /> -->
                <a href="/Home/ForgotPassword">Forgot Password</a><br/><br/>
                <button type="submit" class="waves-effect waves-light btn-large" id="btn">Login<i class="material-icons right">login</i></button>
                <br/><br/>
            </div>
        </form>
    </div>
</div>