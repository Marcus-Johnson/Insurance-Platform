    <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">Policy Payment Details</MudText>
    <MudGrid Spacing="6" Class="mt-16">
        <MudItem xs="7">
            <MudText Typo="Typo.h5" GutterBottom="true">Add a payment method</MudText>
