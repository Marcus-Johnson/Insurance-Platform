<style>
    .unpaid-container{
        display:grid;      
        grid-template-columns: 1fr 8fr 1fr;
        grid-auto-rows: minmax(70px, auto);
        justify-content: center;
        align-content:center;
        padding-top: 5%;
        font-family:sans-serif;
        grid-template-areas: 
        "header header header"
        "sidebar content sidebar2"
        "sidebar content sidebar2"
        "sidebar content sidebar2"
        "sidebar content sidebar2"
        "footer footer footer"
    }
    .unpaid-header{
        grid-area: header;
        display:flex;
        justify-content:center;
        align-items:center;
        font-size: 40px;
        font-weight:800px;
        color:white;
        background-color: #11438c;
;
        border:1px solid black;
        border-top-right-radius:10px;
        border-top-left-radius:10px;
        box-shadow:4px 4px 4px rgba(5, 5, 5, .3);
    }
    .unpaid-content{
        grid-area: content;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding-top:15px;
        background-color: #e3e5f7;
        border:1px solid black;
        border-top:none;
        border-bottom:none;


    }  
    .unpaid-content-row:nth-child(2n+0){
        background-color: white;
    }     
    .unpaid-content-row{
        padding-top: 20px;
    }          
    .unpaid-content-inner-container{
        width:100%;
    }
    .unpaid-content-transaction{
        display:flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        padding-left: 20px;
        padding-right:20px;
    }
    .unpaid-sidebar{
        grid-area: sidebar;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background-color: #eeeeee;

    }    
    .unpaid-sidebar2{
        grid-area: sidebar2;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background-color: #eeeeee;
        box-shadow:4px 4px 4px rgba(5, 5, 5, .3);

    }
     .unpaid-footer{
        grid-area: footer;
    }
    .unpaid-button{
        font-family:sans-serif;
        background-color:green;
        color:white;
        font-size: 20px;
        padding: 4px;
        border-radius:10px;
        border:1px solid black;
    }
    .unpaid-content-value{
        display:flex;
        justify-content: space-between;
        align-items:center;
        width:100%;
        height: 30px;
        border-bottom:1px solid silver;
    }    
    .unpaid-content-name{
        font-size: 17px;
        font-weight:500;
        color: black;
    }
    .unpaid-button-div{
        display:flex;
        justify-content: space-between;
        align-items: center;
        font-family: sans-serif;
        height:90px;
        width:100%;
        padding-left:30px;
        padding-right:30px;
    }
    .unpaid-footer{
        background-color:#11438c;
        border:1px solid black;
        border-top: none;
        border-bottom-right-radius:10px;
        border-bottom-left-radius:10px;
        box-shadow: 4px 4px 4px rgba(5, 5, 5, .3);
    }

</style>

@model NJInsurancePlatform.Models.AccountManager
@{
    ViewData["Title"] = "Unpaid Transactions";
}

    
<form method="post" asp-controller="Administration">
    <div class="unpaid-container">

        <!-- CONTENT -->

        <div class="unpaid-content">
            <div class="unpaid-content-inner-container">
                @for (int i = 0; i < Model.Transactions?.Count; i++)
                {
                <div class="unpaid-content-row">
                    <label class="unpaid-content-transaction">

                        <div class="unpaid-content-value">
                            <label class="unpaid-content-name" asp-for="@Model.Transactions[i].TransactionMUID"></label>
                            <input readonly style="width:55%;border:none;text-align:right" asp-for="@Model.Transactions[i].TransactionMUID">
                        </div>
                        <div class="unpaid-content-value">
                            <label class="unpaid-content-name" asp-for="@Model.Transactions[i].PolicyMUID"></label>
                            <input readonly style="width:55%;border:none;text-align:right"  asp-for="@Model.Transactions[i].PolicyMUID">
                        </div>
                        <div class="unpaid-content-value">
                            <label class="unpaid-content-name" asp-for="@Model.Transactions[i].CustomerMUID"></label>
                            <input readonly style="width:55%;border:none;text-align:right" asp-for="@Model.Transactions[i].CustomerMUID">
                        </div>
                        <div class="unpaid-content-value">
                            <label class="unpaid-content-name" asp-for="@Model.Transactions[i].PaymentAmount"></label>
                            <input style="width:55%;border:none;text-align:right" asp-for="@Model.Transactions[i].PaymentAmount">
                        </div>
                        <span asp-validation-for="@Model.Transactions[i].PaymentAmount"></span>

                        <div class="unpaid-content-value">
                            <label class="unpaid-content-name" asp-for="@Model.Transactions[i].PaymentDate"></label>
                            <input placeholder="Enter Date" style="width:55%;border:none;text-align:right;" asp-for="@Model.Transactions[i].PaymentDate">
                        </div>
                        <span asp-validation-for="@Model.Transactions[i].PaymentDate"></span>

                        <div class="unpaid-content-value">
                           <label class="unpaid-content-name" asp-for="@Model.Transactions[i].isPaymentComplete"></label>
                            <label>
                               <input type="checkbox" asp-for="@Model.Transactions[i].isPaymentComplete" checked="@Model.Transactions[i].isPaymentComplete" /> 
                               <span></span>
                            </label>
                        </div>
                        <div class="unpaid-button-div">
                            <span>
                                <label class="btn waves-effect #283593 indigo darken-3" asp-for="@Model.Transactions[i].isPaymentComplete">Update Payment</label>
                            </span>
                                <button class="btn waves-effect #283593 indigo darken-3" type="submit">Submit ALL</button>
                        </div>
                    </label>
                 </div>
                }
            </div>
        </div>

        <!-- SIDE BAR1 -->
        <div class="unpaid-sidebar"></div>

        <!-- SIDE BAR2 -->
        <div class="unpaid-sidebar2"></div>

        <!-- FOOTER -->
        <div class="unpaid-footer">

        </div>
    </div>
</form>






