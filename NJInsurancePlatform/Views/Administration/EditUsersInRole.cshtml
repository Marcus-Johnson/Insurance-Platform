@model List<NJInsurancePlatform.Models.UserRoleViewModel>
@{
    //ViewData["Title"] = "You Can Add or Remove Users In This Role";
    var roleId = ViewBag.roleId;
    @*Use View Bag To Get Id Number*@
}

<div style="padding-left:2%;">

<form class="col s12" method="post" asp-controller="Administration" asp-action="EditUsersInRole">
    <div >
        <div > 
            @for (int i = 0; i < Model.Count; i++)
            {
                <p>
                    <label>
                        <input type="checkbox" asp-for="@Model[i].IsSelected" checked="@Model[i].IsSelected" />
                        <span>
                            <input type="hidden" asp-for="@Model[i].Userid">
                            <input type="hidden" asp-for="@Model[i].userName">
                            <label asp-for="@Model[i].IsSelected" style="font-size: 20px;">@Model[i].userName</label>
                        </span>
                    </label>
                </p>
            }
        </div>
        <div>
            <button class="btn waves-effect waves-light" type="submit">Update</button>
            <a class="btn waves-effect waves-light red" asp-controller="Administration" asp-action="EditRole" asp-route-Id="@roleId">Cancel</a>

@*            <a class="btn waves-effect waves-light red" asp-controller="Administration" asp-action="EditRole" asp-route-Id="@roleId">Cancel</a>
*@        </div>
    </div>

</form>
</div>

