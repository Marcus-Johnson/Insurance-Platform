@{
    ViewData["Title"] = "Policy Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<NJInsurancePlatform.Models.Policy>
@*@model< Policy>*@
@*@using NJInsurancePlatform.Models;*@
@*@using IEnumerable<ApplicationModelConventionExtensions.Policy>;*@
<style>
    .policyButton {
        background-color: white;
        border-radius: 20px;
        border-width: 1px;
        width: 300px;
    }
    .buttons {
        display: flex;
        flex-flow: row wrap;
        justify-content: space-around;
    }
</style>


<div class="container">

    <div class="row">
        <div class="policyButton" style="width: 100%; justify-content: center; align-items: center;">

            @foreach (var policy in Model)
            {
                @if (policy.Pending == false || policy.Pending == null)
                {
                    @*@model Policy;*@

                    <form method="post" asp-controller="Policy" asp-action="PolicyRequest" style>
                            @*<input readonly type="text" HTML.DisplayFor("@policy.NameOfPolicy") value="@policy.NameOfPolicy"/>*@
                            @*<label HTML.DisplayFor("@policy.NameOfPolicy")>Name Of Policy</label>*@
                            @*<input readonly type="text" HTML.DisplayFor("@policy.PolicyOwner") value="@policy.PolicyOwner"/>*@
                        <input readonly type="text" asp-for="@policy.NameOfPolicy" placeholder="@policy.NameOfPolicy"/>
                        <input readonly type="text" asp-for="@policy.PolicyOwner" placeholder="@policy.PolicyOwner"/>
                        <input readonly type="text" asp-for="@policy.CustomerMUID" placeholder="@policy.CustomerMUID"/>

                        <hr size="1" width="90%" />
                        <input readonly type="text" asp-for="@policy.PolicyTotalAmount" placeholder="@policy.PolicyTotalAmount" />
                        <input readonly type="text" asp-for="@policy.PolicyPaidOffAmount" placeholder="@policy.PolicyPaidOffAmount" />
                        <input readonly type="text" asp-for="@policy.Deductible" placeholder="@policy.Deductible" />
                        <input readonly type="text" asp-for="@policy.OutOfPocketLimit" placeholder="@policy.OutOfPocketLimit" />
                        <input readonly type="text" asp-for="@policy.AnnualLimitOfCoverage" placeholder="@policy.AnnualLimitOfCoverage" />
                        <input readonly type="text" asp-for="@policy.PolicyPaymentisDue" placeholder="@policy.PolicyPaymentisDue" />
                        <input readonly type="text" asp-for="@policy.PolicyMUID" placeholder="@policy.PolicyMUID" />
                        <input readonly type="text" asp-for="@policy.PolicyNumber" placeholder="@policy.PolicyNumber" />
                        <input readonly type="text" asp-for="@policy.PolicyStart_Date" placeholder="@policy.PolicyStart_Date" />
                        <input readonly type="text" asp-for="@policy.PolicyEnd_Date" placeholder="@policy.PolicyEnd_Date" />
                        <input readonly type="text" asp-for="@policy.Pending" placeholder="@policy.Pending" />
                        <button type="submit" class="policyButton">Request</button>
                    </form>
                }
            }

        </div>
    </div>
    <button class="btn waves-effect waves-light right indigo" type="submit" name="action">
        Submit
        <i class="material-icons right">send</i>
    </button>

</div>