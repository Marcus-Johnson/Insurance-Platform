@{
    ViewData["Title"] = "Policy Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2 class="header center">Policy Details</h2>

    <div class="row" style="border-radius:10px; border:2px solid; padding-top: 25px">
        <div class="row">
            <div class="input-field col s12 l10 push-l1">
                <input placeholder="Policy Number" id="PolicyNumber" type="text" class="validate" REQUIRED>
                <label for="PolicyNumber">Policy Number</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12 l10 push-l1">
                <input placeholder="Name of policy" id="NameOfPolicy" type="text" class="validate" REQUIRED>
                <label for="NameOfPolicy">Name of policy</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12 l10 push-l1">
                <input placeholder="Policy Owner" id="PolicyOwner" type="text" class="validate" REQUIRED>
                <label for="PolicyOwner">Policy Owner</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12 l10 push-l1">
                <input placeholder="Deductible" id="Deductible" type="text" class="validate" REQUIRED>
                <label for="Deductible">Deductible</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12 l10 push-l1">
                <input placeholder="Out Of Pocket Limit" id="OutOfPocketLimit" type="text" class="validate" REQUIRED>
                <label for="OutOfPocketLimit">Out Of Pocket Limit</label>
            </div>
        </div>

        <div class="row">
           <div class="input-field col s12 l10 push-l1">
                <input placeholder="Annual Limit Of Coverage" id="AnnualLimitOfCoverage" type="text" class="validate" REQUIRED>
                <label for="AnnualLimitOfCoverage">Annual Limit Of Coverage</label>
            </div>
        </div>

        <div class="row">
            <div class="col s12 l10 push-l1">             
                <label>
                    <input id="PolicyPaymentIsDue" type="checkbox" disabled="disabled"/>
                    <span>Policy Payment Is Due</span>
                </label>              
            </div>
        </div>


        <div class="row">
            <div class="input-field col s12 l10 push-l1">
                <input placeholder="Policy Total Amount" id="PolicyTotalAmount" type="text" class="validate" REQUIRED>
                <label for="PolicyTotalAmount">Policy Total Amount</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12 l10 push-l1">
                <input placeholder="Policy Paid Off Amount" id="PolicyPaidOffAmount" type="text" class="validate" REQUIRED>
                <label for="PolicyPaidOffAmount">Policy Paid Off Amount</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12 l10 push-l1">
                <input placeholder="Policy Start Date" id="PolicyStartDate" type="text" class="datepicker" REQUIRED>
                <label for="PolicyStartDate">Policy Start Date</label>
            </div>
        </div>

        <div class="row">
           <div class="input-field col s12 l10 push-l1">
                <input placeholder="Policy End Date" id="PolicyEndDate" type="text" class="datepicker" REQUIRED>
                <label for="PolicyEndDate">Policy End Date</label>
            </div>
        </div>

    </div>
</div>
