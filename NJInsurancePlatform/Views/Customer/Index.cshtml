<div>
    <!-- Modal Structure -->

    <div id="@($"modal{i}")" class="modal bottom-sheet" style="padding:1rem; background: rgba(10, 50, 100, 0.7)">
        <form method="post" asp-controller="Customer" asp-action="CreateClaim">
            <div class="modal-content">
