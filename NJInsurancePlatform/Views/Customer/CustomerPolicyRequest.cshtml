@model NJInsurancePlatform.Models.CustomerPolicyRequestViewModel
@{
    ViewData["Title"] = "Customer Policy Request";
}

<!--Add CSS To Header-->
<head>
   <link rel="stylesheet" href="~/css/CustomerPolicyRequestView.css" />
</head>

<!--Main container-->
<form method="post" asp-controller="Customer">
<div class="productRequestBody">
    <div class="productRequestContainer">
        <div class="productRequestHeader">
            @Model.Product.ProductName Policy Request For @Model.Customer.FirstName @Model.Customer.LastName
            </div>
        <div class="productRequestPolicyInfoRow">
            <div class="productRequestPolicyInfoColumn">
                <div class="productRequestPolicyInfoColumnTitle">Policy Information</div>
                <div class="productRequestPolicyInfoColumnInfo">
                    <div hidden class="productRequestPolicyInfoColumnInfoItem">
                        <div>

                            <input hidden type="text" readonly asp-for="@Model.Customer.Id"/>
                            <input hidden type="text" readonly asp-for="@Model.Customer.UserName"/>
                            <input hidden type="text" readonly asp-for="@Model.Customer.Gender"/>
                            <input hidden type="text" readonly asp-for="@Model.Customer.PasswordHash"/>
                            <input hidden type="text" readonly asp-for="@Model.Customer.NormalizedUserName"/>
                            <input hidden type="text" readonly asp-for="@Model.Customer.Active"/>
                            <input hidden type="text" readonly asp-for="@Model.Customer.CreatedDate"/>
                            <input hidden type="text" readonly asp-for="@Model.Customer.IsPrimaryPolicyHolder"/>
                            <input hidden type="text" readonly asp-for="@Model.Customer.LicenseNumber"/>
                            <input hidden type="text" readonly asp-for="@Model.Customer.SSN"/>
                            <input hidden type="text" readonly asp-for="@Model.Customer.CurrentEmployer"/>
                            <input hidden type="text" readonly asp-for="@Model.Customer.LicenseNumber"/>

                            <label hidden  asp-for="@Model.Product.ProductMUID" class="productRequestInfoLabel"></label>
                        </div>
                        <div style="font-size:9px">
                            <input hidden type="text"  style="border:none;height:100%;font-size:20px;" readonly asp-for="@Model.Product.ProductMUID"  placeholder="@Model.Product.ProductMUID"/>
                        </div>
                    </div>                       
                    <div class="productRequestPolicyInfoColumnInfoItem">
                        <div>
                            <label asp-for="@Model.Product.ProductName" class="productRequestInfoLabel"></label>
                        </div>
                        <div style="font-size:9px">
                            <input style="border:none;height:100%;font-size:20px;" readonly asp-for="@Model.Product.ProductName" value="@Model.Product.ProductName"/>
                        </div>
                    </div>                     
                    <div class="productRequestPolicyInfoColumnInfoItem">
                        <div>
                            <label asp-for="@Model.Product.Price" class="productRequestInfoLabel"></label>
                        </div>
                        <div style="font-size:9px">
                            <input style="border:none;height:100%;font-size:20px;" readonly asp-for="@Model.Product.Price" value="@Model.Product.Price"/>
                        </div>
                    </div>                     
                    <div class="productRequestPolicyInfoColumnInfoItem">
                        <div>
                            <label asp-for="@Model.Product.Deductible" class="productRequestInfoLabel"></label>
                        </div>
                        <div style="font-size:9px">
                            <input style="border:none;height:100%;font-size:20px;" readonly asp-for="@Model.Product.Deductible" value="@Model.Product.Deductible"/>
                        </div>
                    </div>                        
                    <div class="productRequestPolicyInfoColumnInfoItem">
                        <div>
                            <label asp-for="@Model.Product.AnnualLimitOfCoverage" class="productRequestInfoLabel"></label>
                        </div>
                        <div style="font-size:9px">
                            <input style="border:none;height:100%;font-size:20px;" readonly asp-for="@Model.Product.AnnualLimitOfCoverage" value="@Model.Product.AnnualLimitOfCoverage"/>
                        </div>
                    </div>                        
                    <div class="productRequestPolicyInfoColumnInfoItem">
                        <div>
                            <label asp-for="@Model.Product.OutOfPocketLimit" class="productRequestInfoLabel"></label>
                        </div>
                        <div style="font-size:9px">
                            <input style="border:none;height:100%;font-size:20px;" readonly asp-for="@Model.Product.OutOfPocketLimit" value="@Model.Product.OutOfPocketLimit"/>
                        </div>
                    </div>                        
                    <div class="productRequestPolicyInfoColumnInfoItem">
                        <div>
                            <label asp-for="@Model.Product.PolicyTotalAmount" class="productRequestInfoLabel"></label>
                        </div>
                        <div style="font-size:9px">
                            <input style="border:none;height:100%;font-size:20px;" readonly asp-for="@Model.Product.PolicyTotalAmount" value="@Model.Product.PolicyTotalAmount"/>
                        </div>
                    </div>                    

                </div>
            </div>
            <div class="productRequestPolicyInfoColumn2">
                <div class="productRequestPolicyInfoColumnTitle">Customer Information</div>
                <div class="productRequestPolicyInfoColumnInfo">                    
                    <div class="productRequestPolicyInfoColumnInfoItem">
                        <div>
                            <label asp-for="@Model.Customer.LastName" class="productRequestInfoLabel"></label>
                        </div>
                        <div style="font-size:9px">
                            <input style="border:none;height:100%;font-size:20px;" readonly asp-for="@Model.Customer.LastName" value="@Model.Customer.LastName"/>
                        </div>
                    </div>                      
                    <div class="productRequestPolicyInfoColumnInfoItem">
                        <div>
                            <label asp-for="@Model.Customer.FirstName" class="productRequestInfoLabel"></label>
                        </div>
                        <div style="font-size:9px">
                            <input style="border:none;height:100%;font-size:20px;" readonly asp-for="@Model.Customer.FirstName" value="@Model.Customer.FirstName"/>
                        </div>
                    </div>                       
                    <div class="productRequestPolicyInfoColumnInfoItem">
                        <div>
                            <label asp-for="@Model.Customer.PhoneNumber" class="productRequestInfoLabel"></label>
                        </div>
                        <div style="font-size:9px">
                            <input style="border:none;height:100%;font-size:20px;" readonly asp-for="@Model.Customer.PhoneNumber" value="@Model.Customer.PhoneNumber"/>
                        </div>
                    </div>                       
                    <div class="productRequestPolicyInfoColumnInfoItem">
                        <div>
                            <label asp-for="@Model.Customer.CurrentAddress" class="productRequestInfoLabel"></label>
                        </div>
                        <div style="font-size:9px">
                            <input style="border:none;height:100%;font-size:20px;" readonly asp-for="@Model.Customer.CurrentAddress" value="@Model.Customer.CurrentAddress"/>
                        </div>
                    </div>                      
                    <div class="productRequestPolicyInfoColumnInfoItem">
                        <div>
                            <label asp-for="@Model.Customer.CurrentCity" class="productRequestInfoLabel"></label>
                        </div>
                        <div style="font-size:9px">
                            <input style="border:none;height:100%;font-size:20px;" readonly asp-for="@Model.Customer.CurrentCity" value="@Model.Customer.CurrentCity"/>
                        </div>
                    </div>                     
                    <div class="productRequestPolicyInfoColumnInfoItem">
                        <div>
                            <label asp-for="@Model.Customer.CurrentZipcode" class="productRequestInfoLabel"></label>
                        </div>
                        <div style="font-size:9px">
                            <input style="border:none;height:100%;font-size:20px;" readonly asp-for="@Model.Customer.CurrentZipcode" value="@Model.Customer.CurrentZipcode"/>
                        </div>
                    </div>                      
                    <div class="productRequestPolicyInfoColumnInfoItem">
                        <div>
                            <label asp-for="@Model.Customer.CurrentState" class="productRequestInfoLabel"></label>
                        </div>
                        <div style="font-size:9px">
                            <input style="border:none;height:100%;font-size:20px;" readonly asp-for="@Model.Customer.CurrentState" value="@Model.Customer.CurrentState"/>
                        </div>
                    </div>                      
                    <div class="productRequestPolicyInfoColumnInfoItem">
                        <div>
                            <label asp-for="@Model.Customer.CurrentEmployer" class="productRequestInfoLabel"></label>
                        </div>
                        <div style="font-size:9px">
                            <input style="border:none;height:100%;font-size:20px;" readonly asp-for="@Model.Customer.CurrentEmployer" value="@Model.Customer.CurrentEmployer"/>
                            
                            <!--CREATED DATE-->
                            <label hidden asp-for="@Model.Customer.CreatedDate" class="productRequestInfoLabel"></label>
                            <input hidden style="border:none;height:100%;font-size:20px;" readonly asp-for="@Model.Customer.CreatedDate" value="@DateTime.Now"/>

                            <label hidden asp-for="@Model.Customer.CustomerMUID" class="productRequestInfoLabel"></label>
                            <input hidden style="border:none;height:100%;font-size:20px;" readonly asp-for="@Model.Customer.CustomerMUID" value="@Model.Customer.CustomerMUID"/>
                        </div>
                    </div>   
                </div>
            </div>
        </div>
        <div class="productRequestFooter">
            <button style="width:60%;height:60px;color:white;font-size:25px;font-weight:700;" type="submit" class="waves-effect waves-light btn blue"  id="btn" value="Submit Request">Submit Request</button>
        </div>
    </div>
</div>
</form>


