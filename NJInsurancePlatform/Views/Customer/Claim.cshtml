@model NJInsurancePlatform.Models.Claim
@{

}
<style>
    .make-claim-title{
        display: flex;
        justify-content: center;
        font-family: sans-serif;
        border: 1px solid black;
        border-bottom:none;
        color:white;
        background-color:#2D70B7;
    }
    .make-claim-main{
        display:flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding-top: 50px;

    }    
    .make-claim-container{
        display:flex;
        flex-direction: column;
        width: 500px;
        height: 570px;
    }
    .make-claim-details-row{
        display: flex;
        flex-direction: row;
    }    
    .make-claim-details-names{
        display: flex;
        flex-direction: column;
        border-top:none;
        border-left:none;
    }    
    .make-claim-details-values{
        display: flex;
        flex-direction: column;
        width: 100%;
    }
    .make-claim-name{
        dispaly:flex;
        justify-content: center;
        align-items: flex-start;
        height: 50px;
        width: 150px;
        font-weight: 700;
        padding: 10px 10px 30px 15px;
    }    
    .make-claim-value{
        dispaly:flex;
        justify-content: center;
        align-items: flex-start;
        align-items: center;
        height: 50px;
        width: 100%;
        padding: 10px 10px 30px 15px;
    }          
    .make-claim-value-description{
        dispaly:flex;
        justify-content: center;
        align-items: flex-start;
        height: 100%;
        width: 150px;
        padding: 10px 10px 30px 15px;
    }   
    .make-claim-textarea-description{
        height: 240px;
        width: 300px;
        resize: none;
        background-color: white;
        box-shadow: 3px 3px 3px rgba(0, 0, 0, .3);
    }
    .make-claim-value-date{
        dispaly:flex;
        justify-content: center;
        align-items: flex-start;
        align-items: center;
        height: 50px;
        width: 200px;
        padding: 0px 0px 0px 15px;
    }   
    .make-claim-submit{
        display:flex;
        flex-direction: row;
        justify-content: flex-start;
        padding-right:20px;
    }
    .make-claim-details-side-bar{
        background-color: #daddfa;

    }     
    .make-claim-details-side-bar-container{
        display:flex;
        border: 1px solid;
        border-top:none;
        width: 100%;
    }    
    .make-claim-details-values-bar{
        width:100%;
        background-color:#fcecee;
    }

</style>

<div class="make-claim-main">
    <form method="post">
    <div class="make-claim-container">
        <div class="make-claim-title">
            <h4>Make a Policy Claim </h4>
        </div>
        <div class="make-claim-details-row">
            <div class="make-claim-details-side-bar-container">
                <div class="make-claim-details-side-bar">
                    <div class="make-claim-details-names">
                        <div class="make-claim-name"></div>
                        <div class="make-claim-name" >PolicyID:</div>
                        <div class="make-claim-name">Todays Date:</div>
                        <div class="make-claim-name">Claim Description:</div>
                    </div>
                    </div>
                    <div class="make-claim-details-values-bar">
                    <div class="make-claim-details-values">
                        <div class="make-claim-value"></div>
                        <div class="make-claim-value" style="font-weight:700;font-size:15px">367657847</div>
                        <div class="make-claim-value-date">
                        <input type="date" style="padding:0px 15px 0px 15px;border:none;background-color:white;border:1px solid; box-shadow: 3px 3px 3px rgba(0, 0, 0, .3)" />
                    </div>
                    <div class="make-claim-value-description">
                        <div>
                           <label></label>
                           <textarea placeholder="Enter Policy Details" class="make-claim-textarea-description" rows="20" cols="50">
                           </textarea>
                        </div>
                        <br/>
                        <div class="make-claim-submit">
                           <button class="waves-effect waves-light btn blue" style=" border:1px solid; border-radius:20px">Submit Claim</button>
                        </div>
                    </div>
                </div>
                </div>
            </div>

        </div>

    </div>
    </form>
</div>
