@using Microsoft.AspNetCore.Identity

@*TESTING FUNCTIONALIY OF ROLE CREATION AND FUNCTION*@

@inject SignInManager<ApplicationUser> signInManager;

@*TESTING FUNCTIONALIY OF ROLE CREATION AND FUNCTION*@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gx Insurance</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/css/site.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>

    <header>
        <!-- Drop Down for Policies-->
        <ul id="dropdown1" class="dropdown-content">
            <li><a href="/Policy/PolicyDetails">Policy Details</a></li>
            <li><a href="/Payment/Details">Policy Payment Details</a></li>
        </ul>

        <!--Main Navbar-->
        <nav class="indigo darken-3">
            <div class="nav-wrapper">
                <a href="/Home/Index" class="brand-logo">Gx Insurance<i class="material-icons left">domain</i></a>
                <a href="#" data-target="main-sidenav" class="sidenav-trigger"><i class="material-icons">menu</i></a>

                <ul class="right hide-on-med-and-down">
                    <li><a href="/Home/Index">Home</a></li>

                    <!-- Dropdown Trigger -->
                    <li><a class="dropdown-trigger" href="#!" data-target="dropdown1">Policies<i class="material-icons right">arrow_drop_down</i></a></li>
                    <li><a class="dropdown-trigger" href="#!" data-target="dropdown2">My Profile<i class="material-icons left">account_circle</i></a></li>

                    @if (signInManager.IsSignedIn(User))
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <!--Drop Down for Roles-->
                            <li><a href="/Administration/GetRoles">Roles<i class="material-icons left">assignment_ind</i></a></li>
                        }
                        <!-- Logout Icon-->
                        <li>
                            <form id="user-logout" method="post" asp-controller="Home" asp-action="Logout">
                                <button class="logout logout-hover" type="submit"><i class="material-icons center">logout</i></button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <!-- Drop Down for My Profile-->
                        <ul id="dropdown2" class="dropdown-content">
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Register">Test Register</a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Test Login</a>
                            </li>
                        </ul>
                    }
                    <!-- Dark Mode -->
                    <li>
                        <a class="dark-toggle"
                           onclick="DarkMode()" title="Dark/light">
                            <i class="material-icons left">brightness_4</i>
                        </a>
                    </li>
                </ul>
                <ul class="right hide-on-large-only">
                    <li><a href="sass.html"><i class="material-icons">search</i></a></li>
                    <li><a href="badges.html"><i class="material-icons">view_module</i></a></li>
                    <li><a href="collapsible.html"><i class="material-icons">refresh</i></a></li>
                    <li><a data-target="profile-sidenav" class="sidenav-trigger"><i class="material-icons">more_vert</i></a></li>
                    @if (signInManager.IsSignedIn(User))
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <!--Drop Down for Roles-->
                            <li><a href="/Administration/GetRoles"><i class="material-icons left">assignment_ind</i></a></li>
                        }
                        <!-- Logout Icon-->
                        <li>
                            <form id="user-logout" method="post" asp-controller="Home" asp-action="Logout">
                                <button class="logout logout-hover" type="submit"><i class="material-icons center">logout</i></button>
                            </form>
                        </li>
                    }
                    </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Sidenav Components-->
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const MainSidenav = document.querySelectorAll('.sidenav');
                const ProfileSidenav = document.getElementById('profile-sidenav')
                const RightEdge = {
                    'edge' : 'right'
                };
                M.Sidenav.init(MainSidenav);
                M.Sidenav.init(ProfileSidenav, RightEdge);
            });
        </script>

        <ul class="sidenav" id="main-sidenav">
            <li><a href="/Home/Index">Home</a></li>
            <ul class="collapsible">
            <li>
                <div class="collapsible-header">
                    <i class="material-icons">filter_drama</i>
                    First
                    <span class="new badge">4</span>
                </div>
                <div class="collapsible-body"><p>Lorem ipsum dolor sit amet.</p></div>
            </li>
            </ul>
            <li class="divider"></li>
            <li><a href="/Policy/PolicyDetails">Policy Details</a></li>
            <li><a href="/Payment/Details">Policy Payment Details</a></li>

            <li class="divider"></li>
            <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Register">Test Register</a></li>
            <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Test Login</a></li>
            <li class="divider"></li>
        </ul> 

        <ul class="sidenav" id="profile-sidenav">
            <li><a href="/Home/Index">Home</a></li>
            <li class="divider"></li>
            <li><a href="/Policy/PolicyDetails">Policy Details</a></li>
            <li><a href="/Payment/Details">Policy Payment Details</a></li>
            <li class="divider"></li>
            <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Register">Test Register</a></li>
            <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Test Login</a></li>
            <li class="divider"></li>
        </ul>


    </header>

    <main role="main" class="pb-3">
        <div class="container">
            @RenderBody()

            <!--Chat Button-->
            <div class="fixed-action-btn">
                <a class="btn-floating btn-large indigo" href="#" target="">
                    <i class="large material-icons">chat</i>
                </a>
            </div>
        </div>
    </main>

    <!--Footer Content/Styling & Logout Styling-->
    <style>
        .logout {
            background-color: transparent;
            color: white;
            border: none;
        }

        .logout-hover:hover {
            background-color: rgba(0, 0, 0, 0.1);
        }

        .footer-fixed {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
        }
    </style>

    <footer class="page-footer footer-fixed indigo darken-3">
        <div class="container">
            2022 Gx Insurance
            <a class="grey-text text-lighten-4 right" href="#!">More Links</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <scipt src="~/js/materialize.js"</scipt>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false);
</body>
</html>