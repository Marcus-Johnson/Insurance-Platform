
<div class="col s12 m7">
    <h2 class="header">Add Payment Method</h2>
    <div class="card horizontal">
        <div class="card-stacked">
            <div class="card-content">
                 <div class="input-field col s6">
                    <input placeholder="Name on the card" id="NameOnCard" type="text" class="validate" REQUIRED>
                    <label for="NameOnCard">Name on Card</label>
                </div>

                <div class="input-field col s6">
                    <input placeholder="Number on the card" id="CardNumber" type="text" class="validate" REQUIRED>
                    <label for="CardNumber">Card Number</label>
                </div>

                <div class="input-field col s6">
                    <input placeholder="Street Address" id="StreetAddres" type="text" class="validate" REQUIRED>
                    <label for="StreetAddress">Street Address</label>
                </div>

                <div class="input-field col s6">
                    <input placeholder="Apartment/Suite #" id="AptSuite" type="text" class="validate" REQUIRED>
                    <label for="AptSuite">Apt/Suite</label>
                </div>

                <div class="input-field col s6">
                    <input placeholder="Country" id="Country" type="text" class="validate" REQUIRED>
                    <label for="Country">Country</label>
                </div>

                <div class="input-field col s6">
                    <input placeholder="State" id="State" type="text" class="validate" REQUIRED>
                    <label for="State">State</label>
                </div>

                <div class="input-field col s6">
                    <input placeholder="City" id="City" type="text" class="validate" REQUIRED>
                    <label for="City">City</label>
                </div>

                <div class="input-field col s6">
                    <input placeholder="Postal Code" id="PostalCode" type="text" class="validate" REQUIRED>
                    <label for="PostalCode">Postal Code</label>
                </div>
            </div>
            <div class="card-action">
                <a class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a>
            </div>
        </div>
    </div>
</div>

