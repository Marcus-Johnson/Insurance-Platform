@model NJInsurancePlatform.Models.PaymentViewModel
@{
    ViewData["Title"] = "Payment";
}

<div class="row">
    <div class="col s7">

        <div class="row">
            <img class="col s4" style="height: 3em" src="~/images/GalaxE-Solutions.svg" />
            <h5 class="col s4 right">@DateTime.Now.ToString("hh:mm tt")</h5>
        </div>

        <div class="row" style="width: 90%">
            <form class="col s12" id="border">

                <div class="col s12">
                    <h6>Card Number</h6>
                    <label>Enter the 16-digit card number on the card</label>
                </div>

                <div class="row">
                    <div class="input-field col s10">
                        <img src="/images/mc_symbol.svg" class="material-icons prefix" />
                        <input asp-for="@Model.Payment.CardNumber" placeholder="2412 - 7512 - 3412 - 3456" type="text" class="validate">
                        <i class="material-icons prefix right">verified</i>
                    </div>
                </div>

                <div class="row">
                    <div class="col s5">
                        <h6>CVV Number</h6>
                        <label>Enter the 3 or 4 digit number on the card</label>
                    </div>
                    <div class="input-field col s2">
                        <input asp-for="@Model.Payment.CVV" id="cvv" type="text" class="validate">
                        <label for="cvv">CVV</label>
                    </div>
                </div>

                <div class="row">
                    <div class="col s5">
                        <h6>Expiry Date</h6>
                        <label>Enter the expiration date of the card</label>
                    </div>

                    <div class="input-field col s2">
                        <input id="exp_month" type="text" class="validate">
                        <label for="exp_month">12</label>
                    </div>

                    <div class="input-field col s2">
                        <input id="exp_year" type="text" class="validate">
                        <label for="exp_year">22</label>
                    </div>
                </div>

                <div class="row">
                    <div class="col s5">
                        <h6>Password</h6>
                        <label>Enter your Dynamic password</label>
                    </div>

                    <div class="input-field col s5">
                        <input id="password" type="password" class="validate">
                        <label for="password">Password</label>
                    </div>
                </div>
                <a class="col s10 btn-large" id="btn">Confirm Payment</a>
            </form>
        </div>
    </div>

    <div class="col s5">
        <div class="row" id="CCinfo">

            <div class="cc-border"></div>

            <div id="cc_info">
                <img src="~/images/blob-scatter-haikei.svg" style="position: absolute; border-radius: .5rem" />
                <div class="chip">
                    <div class="chip-line"></div>
                    <div class="chip-line"></div>
                    <div class="chip-line"></div>
                    <div class="chip-line"></div>
                    <div class="chip-main"></div>
                </div>

                <svg class="wave" viewBox="0 3.71 26.959 38.787" width="26.959" height="38.787" fill="white">
                    <path d="M19.709 3.719c.266.043.5.187.656.406 4.125 5.207 6.594 11.781 6.594 18.938 0 7.156-2.469 13.73-6.594 18.937-.195.336-.57.531-.957.492a.9946.9946 0 0 1-.851-.66c-.129-.367-.035-.777.246-1.051 3.855-4.867 6.156-11.023 6.156-17.718 0-6.696-2.301-12.852-6.156-17.719-.262-.317-.301-.762-.102-1.121.204-.36.602-.559 1.008-.504z"></path>
                    <path d="M13.74 7.563c.231.039.442.164.594.343 3.508 4.059 5.625 9.371 5.625 15.157 0 5.785-2.113 11.097-5.625 15.156-.363.422-1 .472-1.422.109-.422-.363-.472-1-.109-1.422 3.211-3.711 5.156-8.551 5.156-13.843 0-5.293-1.949-10.133-5.156-13.844-.27-.309-.324-.75-.141-1.114.188-.367.578-.582.985-.542h.093z"></path>
